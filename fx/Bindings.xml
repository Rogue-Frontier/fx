<?xml version="1.0" encoding="utf-8" ?>
<Bindings>
	<Command name="Open in Notepad++" xref="Programs/np.x">
		<Target>
			<File ext="xml"/>
			<File ext="json"/>
			<File ext="txt"/>
			<File ext="gitignore"/>
			<File pattern=".*"/>
		</Target>
	</Command>
	<Command name="Open Github" fmt="gh repo view --web">
		<Target>
			<Dir>
				<Dir name=".git"/>
				<Dir name=".github"/>
			</Dir>
		</Target>
	</Command>
	<Command name="Run C# Project" fmt="dotnet run --project {0}">
		<Target>
			<Dir><File ext="csproj"/></Dir>
			<File ext="csproj"/>
		</Target>
	</Command>
	<Command name="Publish C# Project" fmt="dotnet publish --project {0}">
		<Target>
			<Dir><File ext="csproj"/></Dir>
			<File ext="csproj"/>
		</Target>
	</Command>
	<Command name="Open Solution in Visual Studio" fmt="vi {0}">
		<Target>
			<Dir><File ext="sln"/></Dir>
			<File ext="sln"/>
		</Target>
	</Command>
	<Command name="Run C# Script" xref="Programs/cx.x">
		<Target>
			<File ext="cx"/>
		</Target>
	</Command>
</Bindings>